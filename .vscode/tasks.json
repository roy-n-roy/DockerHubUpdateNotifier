{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "setup_venv",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"[ ! -e venv/bin/activate ] && python3 -m venv venv; source venv/bin/activate && python -m pip install --upgrade pip && pip install -r requirements.txt autopep8 flake8 rope",
			],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"(if not exist venv\\Scripts\\activate python -m venv venv) & venv\\Scripts\\activate && python -m pip install --upgrade pip && pip install -r requirements.txt autopep8 flake8 rope",
				],
			},
			"problemMatcher": [],
		},
		{
			"label": "django_migrate",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"source venv/bin/activate && python ${workspaceFolder}\\django\\manage.py migrate --settings=config.settings_dev",
			],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"venv\\Scripts\\activate && python ${workspaceFolder}\\django\\manage.py migrate --settings=config.settings_dev",
				],
				"options": {
					"env": {
						"SECRET_KEY": "",
					},
				},
			},
			"problemMatcher": [],
		},
	]
}