{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "create requirements.txt",
			"type": "shell",
			"linux": {
				"command": "sh",
				"args": [ "-c", "cat production/requirements.txt >> requirements.txt; rm production/requirements.txt" ],
			},
			"windows": {
				"command": "powershell",
				"args": [ "-Command", "Get-Content production/requirements.txt | Add-Content requirements.txt; rm production/requirements.txt" ],
			},
			"dependsOn": [
				"export requirements.txt",
				"export productions requirements.txt"
			],
			"problemMatcher": []
		},
		{
			"label": "export requirements.txt",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"lock",
				"--requirements",
				">",
				"requirements.txt"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "export productions requirements.txt",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"lock",
				"--requirements"
			],
			"windows": {
				"command": "docker",
				"args": [
					"run",
					"--rm",
					"--volume=${workspaceFolder}/production:/production:rw",
					"--workdir=/production",
					"python:3.8",
					"sh",
					"-c",
					"pip install pipenv && pipenv lock -r > requirements.txt"
				]
			},
			"options": {
				"cwd": "${workspaceFolder}/production"
			}
		},
		{
			"label": "django_make_migrations",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"run",
				"python",
				"manage.py",
				"makemigrations",
				"account",
				"repos",
				"--settings=config.settings_dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/django",
				"env": {
					"SECRET_KEY": ""
				}
			},
			"problemMatcher": []
		},
		{
			"label": "django_migrate",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"run",
				"python",
				"manage.py",
				"migrate",
				"--settings=config.settings_dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/django",
				"env": {
					"SECRET_KEY": ""
				}
			},
			"problemMatcher": []
		},
		{
			"label": "django_make_messages",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"run",
				"django-admin",
				"makemessages",
				"-e",
				"html,py,txt,js"
			],
			"options": {
				"cwd": "${workspaceFolder}/django"
			},
			"problemMatcher": []
		},
		{
			"label": "django_compile_messages",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"run",
				"django-admin",
				"compilemessages"
			],
			"options": {
				"cwd": "${workspaceFolder}/django"
			},
			"problemMatcher": []
		},
		{
			"label": "django_tests",
			"type": "shell",
			"command": "pipenv",
			"args": [
				"run",
				"python",
				"manage.py",
				"test",
				"--settings=config.settings_dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/django",
				"env": {
					"SECRET_KEY": " "
				}
			},
			"problemMatcher": []
		},
		{
			"label": "django_prelaunch",
			"dependsOn": [
				"django_compile_messages",
				"django_migrate"
			]
		}
	]
}